{
    "name": "stepina/registry-ares",
    "description": "Read data from ARES",
    "license": ["GPL-3.0-or-later"],
    "type": "library",
    "authors": [
        {
            "name": "Jiří Štěpina",
            "email": "jiri.stepina@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {"RegistryAres\\": "src/"}
    },
    "autoload-dev": {
        "psr-4":  {"RegistryAres\\Tests\\": "tests/unit/src/"}
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.3|~7.4|~8.0",
        "guzzlehttp/guzzle": ">=7.0.0",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "slevomat/coding-standard": ">=6.0.0",
        "phpstan/phpstan": ">=0.12.0",
        "phpunit/phpunit": "^9.4",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-phpunit": "^0.12.16"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
